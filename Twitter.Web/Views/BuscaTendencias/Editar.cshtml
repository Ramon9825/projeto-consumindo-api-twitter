@model Twitter.Web.Models.ItemViewModel

@{
    ViewData["Title"] = "Editar";
}


@using (Html.BeginForm("Editar", "BuscaTendencias", FormMethod.Post)) { }

<h1>Editar</h1>

<h4>ItemViewModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Atualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input id="id" type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.TextBoxFor(o => o.Name, new { @class = "form-control", @Value = @Model.Name })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                @Html.TextBoxFor(o => o.Url, new { @class = "form-control", @Value = @Model.Url })
            </div>
            <div class="form-group">
                <label asp-for="Tweets" class="control-label"></label>
                @Html.TextBoxFor(model => model.Tweets, new { @class = "form-control", @Value = Model.Tweets })

                <span asp-validation-for="Tweets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="ObterFavoritos">Voltar</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    if ($.trim($('#id').val()) == '') {
        window.location.href = "Editar";
    }
</script>
}
